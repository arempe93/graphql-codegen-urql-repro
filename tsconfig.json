{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "incremental": true
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
